<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
</head>

<body>
    <div class="login-wrapper">
        <section class="auth-content-sidebar">
            <main>
                <a class="login-back-button" href="/">Back</a>
                <div class="auth-content">
                    <h2>Welcome <span>Back</span></h2>
                    <form action="login" id="account-login" method="POST">
                        <div class="auth-input-field">
                            <label for="email" class="">Email</label>
                            <input type="email" class="normal-border" id="email" name="email">
                            <div class="invalid-message"></div>
                        </div>
                        <div class="auth-input-field">
                            <label for="password" class="">Password</label>
                            <input type="password" class="normal-border" id="password" name="password">
                            <div class="invalid-message"></div>
                        </div>
                        <div class="auth-button">
                            <button type="submit" class="button-2-solid">Log In</button>
                        </div>
                    </form>
                    <p>Don't have an account?
                        <a href="/signup">Sign Up</a>
                    </p>
                </div>
            </main>
        </section>
        <section class="auth-sidebar"></section>
    </div>
    <script src="/javascripts/login_validations.js"></script>
</body>

</html>