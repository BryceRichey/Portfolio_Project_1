<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
</head>

<body>
    <%- include('../partials/header') %>
        <header class="container text-centered mt-5">
            <h1>Login</h1>
            <p>Thanks for joining us today</p>
        </header>
        <br>
        <div class="container">
            <div class="row justify-content-evenly">
                <div class="col-4">
                    <form action="/login" method="POST">
                        <div>
                            <label for="email" class="form-label">Email address</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                        <div class="mt-4">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-dark mt-4">Login</button>
                        </div>
                    </form>
                </div>
                <div class="col-4 text-center my-auto">
                    <p>Don't have an account?</p>
                    <a class="btn btn-dark" href="/sign_up" role="button">Sign Up</a>
                </div>
            </div>
        </div>
        <%- include('../partials/footer') %>
</body>

</html>
<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
    <title>Log In | BYTE Recipes</title>
</head>

<body>
    <div class="login-wrapper">
        <% const flashMessage = message %>
        <% if (flashMessage != null) { %>
            <div class="alert alert-danger error-message" id="error-message" role="alert"></divclass>
                <p><%= flashMessage %></p>
            </div>
        <% } %>
        <section class="auth-content-sidebar">
            <main>
                <a class="button-back" href="/">Go Back</a>
                <div class="auth-content">
                    <h1>Welcome <span>Back</span></h1>
                    <form action="login" id="account-login" method="POST" aria-label="Log in form">
                        <div class="auth-input-field">
                            <label for="email" class="">Email</label>
                            <input type="email" class="normal-border" id="email" name="email">
                            <div class="invalid-message"></div>
                        </div>
                        <div class="auth-input-field">
                            <label for="password" class="">Password</label>
                            <input type="password" class="normal-border" id="password" name="password">
                            <div class="invalid-message"></div>
                        </div>
                        <div class="auth-button">
                            <button type="submit" class="button-orange">Log In</button>
                        </div>
                    </form>
                    <p>Don't have an account?
                        <a href="/signup">Sign Up</a>
                    </p>
                </div>
            </main>
        </section>
        <section class="auth-sidebar"></section>
    </div>
    <script src="/javascripts/login_validations.js"></script>
</body>

</html>