    <form id="main-search" action="" class="search-form" aria-label="Search BYTE recipes">
      <label for="main-search-input" class="visually-hidden">Search BYTE recipes</label>
      <input type="main-search" aria-label="Search BYTE recipes" id="main-search-input" placeholder="Search">
