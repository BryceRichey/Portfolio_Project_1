  </search>
  <% if (locals.currentUser) {%>
    <a href="/logout" class="button-muted">Log Out</a>
    <a href="/account" class="button-orange">My Account</a>  
  <% } else { %>
    <a href="/login" class="button-muted">Log In</a>  
    <a href="/signup" class="button-orange">Sign Up</a>
  <% } %>
