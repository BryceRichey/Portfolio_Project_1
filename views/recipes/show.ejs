<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
</head>

<body>
    <%- include('../partials/header') %>
        <% JSON.stringify(recipe) %>
            <br>
            <table class="table">
                <thead>
                    <tr>
                        <td>
                            Title
                        </td>
                        <td>
                            Servings
                        </td>
                        <td>
                            Ingredients
                        </td>
                        <td>
                            Directions
                        </td>
                        <td>
                            Edit Recipe
                        </td>
                        <td>
                            Delete Recipe
                        </td>
                    </tr>
                </thead>
                <tbody>
                    <% recipe.forEach((recipe_info)=> {%>
                        <tr>
                            <td>
                                <%= recipe_info['r_title'] %>
                            </td>
                            <td>
                                <%= recipe_info['num_serv'] %>
                            </td>
                            <td>
                                <%= recipe_info['ingredients'] %>
                            </td>
                            <td>
                                <%= recipe_info['directions'] %>
                            </td>
                            <td>
                                <a href="<%= `/recipes/${recipe_info['id']}/edit` %> ">Edit</a>
                            </td>
                            <td>
                                <a href="<%= `/recipes/${recipe_info['id']}/delete` %> ">Delete</a>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
            <%- include('../partials/footer') %>
</body>

</html>