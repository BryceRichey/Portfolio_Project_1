<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
</head>

<body>
    <%- include('../partials/header') %>
        <Header class="container text-centered mt-5">
            <div class="col-4">
                <h1>Recipes</h1>
                <p>Submited by: </p>
            </div>
        </Header>
        <% JSON.stringify(recipes) %>
            <br>
            <table class="table">
                <thead>
                    <tr>
                        <td>
                            Title
                        </td>
                        <td>
                            Serving
                        </td>
                        <td>
                            Show Page
                        </td>
                    </tr>
                </thead>
                <tbody>
                    <% recipes.forEach((recipe)=> { %>
                        <tr>
                            <td>
                                <%= recipe['r_title'] %>
                            </td>
                            <td>
                                <%= recipe['num_serv'] %>
                            </td>
                            <td>
                                <a href="<%= `/recipes/${recipe['id']}` %>">
                                    Show
                                </a>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
            <%- include('../partials/footer') %>
</body>

</html>